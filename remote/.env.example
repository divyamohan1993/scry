# =============================================================================
# SCRY REMOTE - CONFIGURATION
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# =============================================================================
# GOOGLE OAUTH SSO
# =============================================================================
# Create credentials at: https://console.cloud.google.com/apis/credentials
# Authorized redirect URI: https://scry.dmj.one/auth/callback

GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# GEMINI API
# =============================================================================
# Get your key at: https://aistudio.google.com/

GEMINI_API_KEY=your-gemini-api-key

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================

# Domain name (used for OAuth redirect and CORS)
DOMAIN=scry.dmj.one

# Server port (default 8000, Nginx proxies 443 -> 8000)
PORT=8000

# Secret key for JWT tokens (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-generate-with-openssl-rand

# Session timeout in seconds (default: 1 hour)
SESSION_TIMEOUT=3600

# =============================================================================
# ACCESS CONTROL
# =============================================================================

# Comma-separated list of allowed email patterns (leave empty to allow all)
# Examples: "user@gmail.com,*@dmj.one,*@company.com"
ALLOWED_EMAILS=

# =============================================================================
# FRAME PROCESSING
# =============================================================================

# Interval between frame captures (milliseconds)
FRAME_INTERVAL_MS=500

# Frame quality (1-100, higher = better quality, more bandwidth)
FRAME_QUALITY=80

# Maximum concurrent sessions
MAX_SESSIONS=10

# =============================================================================
# SCRY ADAPTER
# =============================================================================

# Path to Scry installation (default: parent directory)
SCRY_PATH=../

# Enable detailed mode for descriptive answers
ENABLE_DETAILED_MODE=true

# =============================================================================
# LOGGING
# =============================================================================

# Log level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Enable debug mode (verbose output, not for production)
DEBUG_MODE=false
